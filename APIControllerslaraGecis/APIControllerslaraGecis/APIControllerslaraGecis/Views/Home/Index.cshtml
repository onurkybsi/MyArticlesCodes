@model IEnumerable<Reservation>
@{ Layout = "_Layout"; }


<form id="addform" asp-action="AddReservation" method="post">
    <div class="form-group">
        <label for="GuestName">Name:</label>
        <input class="form-control" name="GuestName" />
    </div>
    <div class="form-group">
        <label for="Email">Email:</label>
        <input class="form-control" name="Email" />
    </div>
    <div class="form-group">
        <label for="NumberOfGuests">Number Of Guests:</label>
        <input class="form-control" name="NumberOfGuests" />
    </div>
    <div class="text-left panel-body">
        <button type="submit" class="btn btn-sm btn-primary">Add</button>
    </div>
</form>
<table class="table table-sm table-striped table-bordered m-2">
    <thead><tr><th>ID</th><th>Guest</th><th>Email</th><th>Number of Guests</th></tr></thead>
    <tbody>
        @foreach (var r in Model)
        {
            <tr>
                <td>@r.ReservationId</td>
                <td>@r.GuestName</td>
                <td>@r.Email</td>
                <td>@r.NumberOfGuests</td>
            </tr>
        }
    </tbody>
</table>